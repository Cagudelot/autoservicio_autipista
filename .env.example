# =====================================================
# VARIABLES DE ENTORNO - SISTEMA SUPERMERCADO
# =====================================================
# Copiar este archivo como .env y configurar los valores
# cp .env.example .env
# =====================================================

# ==================== BASE DE DATOS ====================
# Configuración para PostgreSQL local o Supabase

# Opción 1: PostgreSQL Local
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nombre_base_datos
DB_USER=usuario
DB_PASSWORD=tu_contraseña_segura

# Opción 2: Supabase (reemplazar los valores anteriores)
# DB_HOST=db.xxxxx.supabase.co
# DB_PORT=5432
# DB_NAME=postgres
# DB_USER=postgres
# DB_PASSWORD=tu_password_supabase

# ==================== API ALEGRA ====================
# Credenciales para la API de Alegra (facturación)
ALEGRA_EMAIL=tu_email@ejemplo.com
ALEGRA_TOKEN=tu_token_api_alegra

# ==================== CONFIGURACIÓN APP ====================
# Puerto para la aplicación Streamlit (opcional)
STREAMLIT_PORT=8501

# Ambiente (development, production)
APP_ENV=development

# ==================== SEGURIDAD ====================
# Secreto para sesiones (generar uno aleatorio)
# python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=genera_un_secreto_aleatorio_aqui
